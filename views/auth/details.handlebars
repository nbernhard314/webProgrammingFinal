<div class="row">
  <div class="col-sm-12">
    {{#if error }}
    <div class="error">
      {{ error }}
    </div>

    <div class="back">
      <a href="/">Login</a>
    </div>
    {{/if}}
  </div>
  {{#if person }}
  <div class="form-group">
    <div class="alert alert-success">
      <dl>
        <dt>ID:</dt>
        <dd>{{id}}</dd>
        <dt>First Name:</dt>
        <dd>{{firstName}}</dd>
        <dt>Last Name:</dt>
        <dd>{{lastName}}</dd>
        <dt>Username:</dt>
        <dd>{{username}}</dd>
        <dt>Profession:</dt>
        <dd>{{profession}}</dd>
      </dl>
    </div>
    <a href="/logout">Logout</a>
  </div>
  {{/if}}
</div>