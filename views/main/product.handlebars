<div class="error alert alert-danger">
    {{#if error }}
    <div class="alert alert-danger">
        {{ error }}
    </div>
    {{/if}}
</div>
<div class="row">

    {{#if product }}
    <div class="form-group">
        <img src="{{imagePath}}">
        <div class="alert alert-success">
            <dl>
                <dt>Item Name:</dt>
                <dd>{{itemName}}</dd>
                <dt>Description:</dt>
                <dd>{{description}}</dd>
                <dt>Price:</dt>
                <dd>{{price}}</dd>
            </dl>
            {{#if authenticated}}
            <form class="server-form" method="post">
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Add To Cart</button>
                </div>
            </form>
            {{/if}}
        </div>
        <div class="reviews">
            <h3>Reviews</h3>
            {{#each review}}
            <h5>{{title}}</h5>
            <ul>
                <li>Rating: {{rating}}/5</li>
                <li>Posted By: {{postedBy}}</li>
                <li>Comment: {{comment}}</li>
            </ul>
            {{/each}}
        </div>
    </div>
    {{/if}}
    {{#if authenticated}}
    <form class="server-form" method="post">
        <div class="form-group">
            <label for="title">Review Title</label>
            <input type="text" class="form-control" id="title" name="title" value="{{title}}">

            <label for="rating">Rating</label>
            <input type="number" step="0.1" class="form-control" id="rating" name="rating" value="{{rating}}">

            <label for="comment">Comment</label>
            <input type="text" class="form-control" id="comment" name="comment" value="{{comment}}">


            <button type="submit" class="btn btn-default">Submit Review</button>

        </div>
    </form>
    {{/if}}
</div>
<script src="../../public/js/reviews.js"></script>