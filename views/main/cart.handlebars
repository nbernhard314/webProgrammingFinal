<h2>Cart</h2>
<form class="server-form" method="post">
    {{#if error}}
    <div class="form-group">
        <div class="alert alert-danger">
            {{ error }}
        </div>
    </div>
    {{/if}}

    {{#if notEmpty }}
    <div class="found">
        <ul>
            {{#each item}}
            <li> <a href="/product/{{id}}"> {{itemName}} </a> Price: ${{price}}</li>
            {{/each}}
        </ul>
        <p>Total Price: ${{totalPrice}}</p>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-default">Complete Cart</button>
    </div>
    {{/if}}

</form>